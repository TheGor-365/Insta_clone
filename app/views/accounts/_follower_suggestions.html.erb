<% @follower_suggestions.each do |person| %>
  <div class="recommended-follower">
    <div class="row">

      <div class="col-sm-3 col-lg-2">
        <%= link_to profile_picture(person, 40), profile_path(person.username) %>
      </div>

      <div class="col-sm-9 col-lg-10 mb-2">

        <%= form_tag follow_person_path, method: :post, class: 'float-right' do %>
          <%= hidden_field_tag :follow_id, person.id %>
          <%= submit_tag 'Follow', class: 'btn btn-info btn-sm' %>
        <% end %>

        <%= link_to person.username, profile_path(person.username), class: 'text-dark' %><br>
        <small class="text-muted">
          <%= person.created_at > 2.days.ago ? 'New to instagramm' : "Followed by #{person.total_followers} users" %>
        </small>
      </div>
    </div>
  </div>
<% end %>
