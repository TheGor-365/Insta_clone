<div class="container">
  <div class="row">
    <div class="col-8">
      <% @posts.each do |post| %>
        <div class="insta-post">

          <div class="post-meta">
            <%= link_to (profile_picture post.person, 40), profile_path(post.person.username) %>
            <%= link_to post.person.username, profile_path(post.person.username), class: 'text-dark' %>
          </div>

          <%= image_tag post.image.url, class: 'img img-fluid' %>

          <div class="post-details">

            <div class="post-actions">
              <i class="fa fa-heart like-<%= post.id %> <%= 'active' if post_liked_by_user?(post.id) %> fa-2x post-like" data-id="<%= post.id %>"></i>

              <%= link_to post_path(post.id) do %>
                <i class="fa fa-comment fa-2x post-comment"></i>
              <% end %>
            </div>

            <p><strong id="<%= post.id %>-likes"><%= post.total_likes_count %> likes</strong></p>
            <p><strong id="<%= post.id %>-comments"><%= link_to post.person.username, profile_path(post.person.username), class: 'text-dark' %></strong></p>
            <%= simple_format post.description %>
            <small class="text-muted"><%= time_ago_in_words post.created_at %> ago</small><br><br>

            <%= render 'posts/comments', post: post, comments: @comments = Comment.includes(:person).where(post_id: post.id) %>

          </div>

          <div class="comment-box">
            <%= form_for @comment do |f| %>
              <%= f.hidden_field :post_id, value: post.id %>
              <div class="input-group">
                <%= f.text_field :comment, placeholder: 'Add comment here', class: 'form-control post-comment' %>
                <div class="input-group-uppend">
                  <%= f.submit 'Post', class: 'btn btn-success float-right' %>
                </div>
              </div>
            <% end %>
          </div>

        </div>
      <% end %>
    </div>

    <div class="col-4">
      <div class="person-summary">
        <p>
          <%= link_to image_tag(current_person.image.thumb.url, class: 'img-circle float-left m-r-15'), profile_path(current_person.username) if current_person.image.present? %>
          <strong><%= current_person.username %></strong><br>
          <%= current_person.full_name %>
        </p>

        <div class="follower-suggestions">
          <%= link_to 'View All', '#', class: 'float-right' %>
          <p class="text-muted">Suggestions for you</p>
          <%= render 'persons/follower_suggestions' %>
        </div>

      </div>
    </div>
  </div>
</div>
