<div class="container">
  <div class="row">
    <div class="col-8">
      <% @posts.each do |post| %>
        <div class="insta-post">

          <div class="post-meta">
            <%= link_to image_tag(post.account.image.thumb.url, class: 'img-circle'), profile_path(post.account.username) %>
            <%= link_to post.account.username, profile_path(post.account.username), class: 'text-dark' %>
          </div>

          <%= image_tag post.image.url, class: 'img img-fluid' %>

          <div class="post-details">

            <div class="post-actions">
              <i class="fas fa-heart like-<%= post.id %> <%= 'active' if post_liked_by_user?(post.id) %> fa-2x post-like" data-id="<%= post.id %>"></i>
              <i class="fas fa-comment fa-2x post-comment"></i>
            </div>

            <p><strong id="<%= post.id %>-likes"><%= post.total_likes_count %> likes</strong></p>
            <p><strong id="<%= post.id %>-comments"><%= link_to post.account.username, profile_path(post.account.username), class: 'text-dark' %></strong></p>
            <%= simple_format post.description %>
            <small class="text-muted"><%= time_ago_in_words post.created_at %> ago</small>

          </div>
        </div>
      <% end %>
    </div>

    <div class="col-4">
      <div class="account-summary">
        <p>
          <%= link_to image_tag(current_account.image.thumb.url, class: 'img-circle'), profile_path(current_account.username) if current_account.image.present? %>
          <strong><%= current_account.username %></strong>
        </p>
        <p><%= current_account.full_name %></p>

        <div class="follower-suggestions">
          <%= link_to 'View All', '#', class: 'float-right' %>
          <p class="text-muted">Suggestions for you</p>
          <%=  %>
        </div>

      </div>
    </div>
  </div>
</div>
