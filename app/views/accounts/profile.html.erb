<div class="container">
  <div class="row">

    <div class="col-4">
      <%= profile_picture @person, 200 %>
    </div>

    <div class="col-8 text-left">
      <div class="row">
        <div class="col-6">
          <%= link_to 'Edit Profile', edit_person_registration_path, class: 'btn btn-muted btn-custom float-right' if can_edit_profile?(@person.id) %>
          <h1><%= @person.full_name %></h1>
        </div>
      </div>

      <div class="row profile-stats">
        <div class="col-4"><%= @person.posts.count %> posts</div>
        <div class="col-4"><%= @person.total_followers %> followers</div>
        <div class="col-4"><%= @person.total_following %> following</div>
      </div>

      <p><%= @person.full_name %></p>
      <%= simple_format @person.description %>
      <p><%= link_to "#{@person.website}", "https://#{@person.website}", target: :_blank if @person.website.present? %></p>
    </div>
  </div>

  <div class="row profile-posts">
    <% @posts.each do |post| %>
      <div class="col-4">
        <div class="insta-post post-squere" style="background: url(<%= post.image.url %>) no-repeat center top">
          <%= link_to post_path(post) do %>
            <div class="post-stats">
              <div class="inner">
                <i class="fa fa-heart"></i> <%= post.total_likes_count %>
                <i class="fa fa-comment m-l-15"></i> <%= post.total_comments_count %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
