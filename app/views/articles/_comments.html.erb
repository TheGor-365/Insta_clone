<% comments.each do |comment| %>
  <div class="comment">
    <%= link_to profile_picture(comment.owner, 25), profile_path(comment.owner.username) %>
    <strong><%= link_to comment.owner.username, profile_path(comment.owner.username), class: 'text-dark' %></strong>
    <%= comment.comment %><br>
    <small class="text-muted m-l-30"><%= time_ago_in_words comment.created_at %> ago</small>
  </div>
<% end %>
