<% @follower_suggestions.each do |owner| %>
  <div class="recommended-follower">
    <div class="row">

      <div class="col-sm-3 col-lg-2">
        <%= link_to profile_picture(owner, 40), profile_path(owner.username) %>
      </div>

      <div class="col-sm-9 col-lg-10 mb-2">

        <%= form_tag follow_owner_path, method: :article, class: 'float-right' do %>
          <%= hidden_field_tag :follow_id, owner.id %>
          <%= submit_tag 'Follow', class: 'btn btn-info btn-sm' %>
        <% end %>

        <%= link_to owner.username, profile_path(owner.username), class: 'text-dark' %><br>
        <small class="text-muted">
          <%= owner.created_at > 2.days.ago ? 'New to instagramm' : "Followed by #{owner.total_followers} users" %>
        </small>
      </div>
    </div>
  </div>
<% end %>
